<Window x:Class="Dictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionary"
        xmlns:viewmodel="clr-namespace:Dictionary.ViewModel"
        mc:Ignorable="d"
        Title="Dictionary" Height="1080" Width="900" WindowStartupLocation="CenterScreen" Background="#1F1F1F">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!--Title-->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".6*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1">
                <Label x:Name="lblTitle"
                       Content="Dictionary"
                       Foreground="#FFE6D4"
                       FontSize="38"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!--Term-->
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"/>
                <ColumnDefinition Width=".75*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="5">
                <Label x:Name="lblTerm"
                       Content="Term"
                       Foreground="#FFE6D4"
                       FontSize="24"
                       VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Column="1"
                    Grid.Row="2"
                    Margin="5"
                    Padding="5"
                    CornerRadius="10"                    
                    Background="#171717">
                <TextBox x:Name="txtBoxTerm"
                         Text="{Binding TermText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         FontSize="24"
                         Foreground="#FFE6D4"
                         BorderThickness="0"
                         VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!--Definition-->
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"/>
                <ColumnDefinition Width=".75*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="5">
                <Label x:Name="lblDefinition"
                       Content="Definition"
                       Foreground="#FFE6D4"
                       FontSize="24"
                       VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Column="1"
                    Margin="5"
                    Padding="5"
                    CornerRadius="10"                    
                    Background="#171717">
                <TextBox x:Name="txtBoxDefinition"
                         Text="{Binding DefinitionText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         Foreground="#FFE6D4"
                         FontSize="14"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"/>
            </Border>
        </Grid>

        <!--Synonym-->
        <Grid Grid.Column="1" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"/>
                <ColumnDefinition Width=".75*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="5">
                <Label x:Name="lblSynonym"
                Content="Synonym"
                Foreground="#FFE6D4"
                FontSize="24"
                VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Column="1"
                    Margin="5"
                    Padding="5"
                    CornerRadius="10"                    
                    Background="#171717">
                <TextBox x:Name="txtBoxSynonym"
                         Text="{Binding SynonymText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         FontSize="24"
                         Foreground="#FFE6D4"
                         BorderThickness="0"
                         VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!--Buttons: Add/Delete/Clear-->
        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".05*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".05*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                    Margin="5"
                    Padding="5"
                    CornerRadius="25"                    
                    Background="#171717">
                <Button x:Name="btnAdd"
                        Content="Add"
                        Command="{Binding AddCommand}"
                        Background="Transparent"
                        Foreground="#FFE6D4"
                        FontSize="32"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <Border Grid.Column="2"
                    Margin="5"
                    Padding="5"
                    CornerRadius="25"                    
                    Background="#171717">
                <Button x:Name="btnDelete"
                        Content="Delete"
                        Command="{Binding DeleteCommand}"
                        Background="Transparent"
                        Foreground="#FFE6D4"
                        FontSize="32"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <Border Grid.Column="3"
                    Margin="5"
                    Padding="5"
                    CornerRadius="25"                    
                    Background="#171717">
                <Button x:Name="btnClear"
                        Content="Clear"
                        Command="{Binding ClearCommand}"
                        Background="Transparent"
                        Foreground="#FFE6D4"
                        FontSize="32"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>

        <!--DataGrid-->
        <DataGrid Grid.Column="1" 
                  Grid.Row="6"
                  Margin="5"
                  x:Name="dataGridDictionary"
                  ItemsSource="{Binding DictionaryEntries}"
                  SelectedItem="{Binding SelectedDictionaryEntry, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Background="#171717"
                  Foreground="#FFE6D4"                  
                  HeadersVisibility="Column"
                  BorderThickness="0"
                  RowHeight="40"
                  ColumnHeaderHeight="40"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  VerticalScrollBarVisibility="Auto" 
                  Cursor="Hand"
                  IsReadOnly="True">
            <!--Column Header-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Term" 
                                    Binding="{Binding Term}"
                                    Width="150"/>
                <DataGridTextColumn Header="Definition" 
                                    Binding="{Binding Definition}"
                                    Width="*"/>
                <DataGridTextColumn Header="Synonym" 
                                    Binding="{Binding Synonym}"
                                    Width="150"/>
            </DataGrid.Columns>
            <!--Row Style-->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#171717"/>
                    <Setter Property="Foreground" Value="#FFE6D4"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </DataGrid.RowStyle>
            <!--Cell Style-->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="#171717"/>
                    <Setter Property="Foreground" Value="#FFE6D4"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <!--removing border when focused or selected-->
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Padding" Value="5,0,5,0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#171717"/>
                            <Setter Property="Foreground" Value="#FFE6D4"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#22222A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <!--Header Style-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#222"/>
                    <Setter Property="Foreground" Value="#FFE6D4"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
    </Grid>
</Window>
